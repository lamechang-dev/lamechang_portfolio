    "axios": "^1.2.2",
    "axios-case-converter": "^0.11.1",
    "body-scroll-lock": "^4.0.0-beta.0",
    "clsx": "^1.1.1",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "next": "^12.2.0",
    "react": "18.3.1",
    "react-device-detect": "^2.2.2",
    "react-dom": "18.3.1",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.2.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.13",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.5.0",
    "postcss": "^8.4.20",
    "postcss-nested": "^6.0.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2"
  }
}
